# Combine the server certificate and the private key into one .pem file
cat server.crt private.pem > combined.pem

# Convert the combined .pem file and the certificate chain into a PKCS12 file
openssl pkcs12 -export -in combined.pem -inkey private.pem -chain -CAfile chain.pem -name tomcat -out keystore.p12

# Convert the PKCS12 file into a Java KeyStore (JKS) file
keytool -importkeystore -deststorepass [your_password] -destkeypass [your_password] -destkeystore my_keystore.jks -srckeystore keystore.p12 -srcstoretype PKCS12 -srcstorepass [your_password] -alias tomcat
